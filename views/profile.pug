      ul.tasks(list_name="available")
        li(task_id="1") Make templates
        li(task_id="2") Make login
        li(task_id="3") Download assets
        li(task_id="4") Win the MHR Â£2000 award
    .four.columns.tasklist
      .tasktitle Current
      ul.tasks(list_name="current")
        li(task_id="5") Move lists
    .four.columns.tasklist
      .tasktitle Finished
      ul.tasks.tasks-finished(list_name="finished")
