block content
  .row
    .six.columns.user-stats
      .four.columns
        img(src='images/peasant.jpg')
        #xp-progress
          .xp-current-progress
        .xp-progress-text 45 / 100xp

      .eight.columns
        h3 Jonny Balls
          span.level Level 1 Peasant
        #stats
          .stat
            img(src='/assets/Item__40.png')
            span 7
          .stat
            img(src='/assets/Item__05.png')
            span 15
          .stat
            img(src='/assets/Item__25.png')
            span 8
    .six.columns
      table.u-full-width
        thead
          tr
            th Name
            th Level
        tbody
          tr
