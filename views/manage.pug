extends base.pug

block content
  .row
    .six.columns
      h3 Most Productive Players
      table.u-full-width
        thead
          tr
            th Rank
            th Name
            th Level
            th XP
        tbody#productivePlayers
          each user,index in users
            tr
              td=index+1
              td=user.name
              td=user.level()
              td=user.xp
    .six.columns
      h3 New Task
      form#newTaskForm
        .row
          label Task Name
          input.u-full-width(type='text', name='name')
        .row
          .six.columns
            label Number of hours
            input.u-full-width(type='number', name='hours')
          .six.columns
            label Priority
            span.priority-level
              input(type='radio', value='0' name='priority')
              span Low
            span.priority-level
              input(type='radio', value='1' name='priority' checked='checked')
              span Normal
            span.priority-level
              input(type='radio', value='2' name='priority')
              span High
        .row
          input.u-full-width.button-primary(type='submit')
  .row
    h3 Tasks
    table.u-full-width
      thead
        tr
          th Task name
          th Status
          th XP value
          th
      tbody
        each task in tasks
          tr
            td=task.name
            td=task.status()
            td=task.xp
            td(task_id=task._id).taskDelete
              i.fa.fa-times


  h3 Productivity over time (ex)
  canvas#productivityChart(width="100%", height="20em")
